<resources>

	<!-- ListRow -->
	<declare-styleable name="ListRow">
		<attr name="row_title" format="string|reference"/>
		<attr name="row_subtitle" format="string|reference"/>
		<attr name="row_arrow" format="boolean"/>
		<attr name="row_icon" format="reference"/>
		<attr name="row_checkbox" format="boolean"/>
	</declare-styleable>

	<!-- ExceptionView -->
	<declare-styleable name="ExceptionView">
		<attr name="exp_msg" format="string|reference"/>
		<attr name="exp_icon" format="reference"/>
		<attr name="exp_action_btn_shown" format="boolean"/>
		<attr name="exp_action_btn_title" format="string|reference"/>
	</declare-styleable>

	<!-- FlowLayout -->
	<declare-styleable name="FlowLayout">
		<attr name="android:gravity"/>
	</declare-styleable>

	<declare-styleable name="FlowLayout_Layout">
		<attr name="android:layout_gravity"/>
	</declare-styleable>

	<declare-styleable name="SuperRecyclerView">
		<attr name="srv_grid_span_count" format="integer" />
		<attr name="srv_layout" format="enum">
			<enum name="LINEAR" value="0" />
			<enum name="GRID" value="1" />
			<enum name="STAGGERED_GRID" value="2" />
		</attr>
		<attr name="srv_layout_orientation" format="enum">
			<enum name="HORIZONTAL" value="0" />
			<enum name="VERTICAL" value="1" />
		</attr>
	</declare-styleable>

	<declare-styleable name="extendedrecyclerview">
		<attr name="layout_empty" format="reference" />
		<attr name="layout_moreProgress" format="reference" />
		<attr name="layout_progress" format="reference" />

		<attr name="recyclerClipToPadding" format="boolean" />
		<attr name="recyclerPadding" format="dimension" />
		<attr name="recyclerPaddingTop" format="dimension" />
		<attr name="recyclerPaddingBottom" format="dimension" />
		<attr name="recyclerPaddingLeft" format="dimension" />
		<attr name="recyclerPaddingRight" format="dimension" />
		<attr name="scrollbarStyle">
			<flag name="insideOverlay" value="0x00" />
			<flag name="insideInset" value="0x01" />
			<flag name="outsideOverlay" value="0x02" />
			<flag name="outsideInset" value="0x03" />
		</attr>

		<attr name="mainLayoutId" format="reference" />
	</declare-styleable>

</resources>