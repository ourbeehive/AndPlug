<resources>

    <!-- RootView style. -->
    <style name="RootView">
        <item name="android:id">@id/root_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RootView.NoActionBar" parent="RootView">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Button style. -->
    <style name="Button" parent="@android:style/Widget.Button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText style. -->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ResetEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableRight">@drawable/abc_ic_clear_mtrl_alpha</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/margin_xl</item>
        <item name="android:layout_marginRight">@dimen/margin_xl</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TextAppearance style. -->
    <style name="TextAppearance" parent="@android:style/TextAppearance.Holo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Clickable" parent="@style/TextAppearance">
        <item name="android:textColor">@color/text_color_clickable</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- ProgressBar Style. -->
    <style name="ProgressBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ProgressBar.Big" parent="@style/ProgressBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="ProgressBar.Middle" parent="@style/ProgressBar">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>



    <style name="Text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

</resources>