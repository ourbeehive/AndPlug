<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				style="@style/RootView"
				android:background="@drawable/bg_login">

	<ImageView
			android:id="@+id/iv_login_bg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="-50dp"
			android:layout_marginRight="-300dp"
			android:scaleType="fitCenter"
			android:src="@drawable/bg_login"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<ImageView
				android:id="@+id/de_login_logo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dip"
				android:layout_marginRight="85dip"
				android:layout_marginTop="91dip"
				android:src="@drawable/logo_with_name"/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="72dip"
				android:layout_marginLeft="30dip"
				android:layout_marginRight="30dip"
				android:orientation="vertical">


			<com.lean56.andplug.view.ResetEditText
					android:id="@+id/et_username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rc_ed_public_service_search_selector"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:hint="@string/account_username"
					android:singleLine="true"
					android:textColor="@color/white_color"
					android:textColorHint="@color/white_color"/>

			<com.lean56.andplug.view.ResetEditText
					android:id="@+id/et_pwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="37dip"
					android:background="@drawable/rc_ed_public_service_search_selector"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:hint="@string/pwd"
					android:inputType="textPassword"
					android:singleLine="true"
					android:textColor="@color/white_color"
					android:textColorHint="@color/white_color"/>

			<Button
					android:id="@+id/btn_login"
					style="@style/Button.Big.Blue"
					android:layout_marginTop="24dip"
					android:text="@string/login"/>

			<TextView
					android:id="@+id/tv_forget_pwd"
					android:textSize="14sp"
					android:textColor="@color/white_color"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_marginTop="11dp"
					android:text="@string/forget_pwd"/>

		</LinearLayout>
	</LinearLayout>

	<TextView
			android:id="@+id/tv_register"
			android:textSize="14sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="21dp"
			android:text="@string/register"/>

</RelativeLayout>
