<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/RootView">

    <include android:id="@id/toolbar" layout="@layout/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_margin="@dimen/margin_l"
            android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_username"
                style="@style/EditText"
                android:hint="@string/account_username"
                app:met_clearButton="true"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#982360"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/ic_account"/>

        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_pwd"
                style="@style/EditText"
                android:inputType="textPassword"
                android:hint="@string/pwd"
                app:met_clearButton="true"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#982360"
                app:met_iconLeft="@drawable/ic_lock"
                app:met_floatingLabel="highlight"/>

        <com.lean56.andplug.view.Button
                android:id="@+id/btn_login"
                style="@style/Button"
                app:btn_shadowEnabled="false"
                app:btn_cornerRadius="0dp"
                android:layout_marginTop="24dip"
                android:text="@string/login"/>

        <TextView
                android:id="@+id/tv_forget_pwd"
                style="@style/Text"
                android:textSize="14sp"
                android:layout_marginTop="11dp"
                android:text="@string/forget_pwd"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">


    </LinearLayout>

</RelativeLayout>
