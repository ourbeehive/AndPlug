<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  style="@style/RootView">

	<include layout="@layout/toolbar"/>

	<FrameLayout android:layout_width="match_parent"
				 android:layout_height="match_parent">

		<FrameLayout
				android:id="@+id/container"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="invisible"/>

		<LinearLayout
				android:id="@+id/emptyView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingTop="@dimen/padding_xxl"
				android:paddingLeft="@dimen/padding_m"
				android:paddingRight="@dimen/padding_m"
				android:gravity="center_horizontal"
				android:orientation="vertical">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="@dimen/padding_xxl"
					android:paddingBottom="@dimen/padding_l"
					android:gravity="start"
					android:lineSpacingExtra="1dp"
					android:lineSpacingMultiplier="1.1"
					android:text="热门搜索"
					android:textSize="@dimen/text_size_m"
					android:textColor="@color/normal_text_color_disabled"/>

			<com.lean56.andplug.view.FlowLayout
					android:id="@+id/flow_hot_keywords"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center|top" />

		</LinearLayout>

	</FrameLayout>

</LinearLayout>

